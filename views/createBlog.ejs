<%- include('layouts/head'); -%>
<body>
    <%- include('layouts/nav'); -%>
    <main>
        <style>.mce-notification {display: none !important;}</style>
        <div class="main_body">
            <div id="allContentCreateBlog">'
                <a id="logout" href="/logout">Logout</a>
                <div id="createBlogForm">
                    <form method="post" name="createBlog" action="" enctype="multipart/form-data">
                        <div>
                            <label for="blogtitle">Title</label>
                            <input placeholder="Add blog title" id="blogtitle" name="blogtitle"></input>
                        </div>
                        <div>
                            <label for="blogslug">Slug</label>
                            <input placeholder="Add slug" id="blogslug" name="blogslug"></input>
                        </div>
                        <div>
                            <label for="blogimage">Image</label>
                            <input type="file" class="button" name="blogimage"></input>
                        </div>
                        <div>
                            <label for="mytextarea">Body</label>
                            <textarea placeholder="Type blog content here" id="blogbody" name="blogbody"></textarea>
                        </div>
                        <input type="submit" value="Save">
                    </form>
                </div>
            </div>
        </div>
    </main>
    <script>
        tinymce.init({
          selector: 'textarea',
          branding: false,
          statusbar: false,
          plugins: 'a11ychecker advcode casechange export formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
          toolbar: 'a11ycheck addcomment showcomments casechange checklist code export formatpainter pageembed permanentpen table',
          toolbar_mode: 'floating',
          tinycomments_mode: 'embedded',
          tinycomments_author: 'Author name',
        });
    </script>
</body>
<%- include('layouts/footer'); -%>